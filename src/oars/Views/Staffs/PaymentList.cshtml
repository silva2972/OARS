@model List<oars.Models.PaymentListVM>

@{
    ViewData["Title"] = "Payment List";
}

<h2>Payment List</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-group">
            <label for="rental_no">Rental Number</label>
            <input name="rental_no" type="number" class="form-control"/>        
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
}
<p class="text-danger">@ViewBag.Error</p>
@if (Model != null)
{
    <table class="table">
        <tr>
            <th>Rental Number</th>
            <th>Invoice Number</th>
            <th>Invoice Date</th>
            <th>Amount Paid</th>
            <th>Credit Card Type</th>
        </tr>
    @foreach (var payment in Model)
    {
        <tr>            
            <td>@Html.DisplayFor(m => payment.rental_no)</td>
            <td>@Html.DisplayFor(m => payment.invoice_no)</td>
            <td>@Html.DisplayFor(m => payment.invoice_date)</td>
            <td>@Html.DisplayFor(m => payment.cc_amt)</td>
            <td>@Html.DisplayFor(m => payment.cc_type)</td>
        </tr>
    }
    </table>
}